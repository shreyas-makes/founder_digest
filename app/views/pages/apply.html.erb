<%= render partial:"shared/heading", locals: {title: 'Apply here', tagline: 'Add your details'} %>

<div class="max-w-lg mx-auto">

    <%= form_for UserSubmission.new do |f| %>
            <div class="space-y-12">
                <div class="">
                    <input type="hidden" name="plan" value="<%= params[:plan] %>">

                <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
                    <div class="sm:col-span-2">
                    <label for="first_name" class="block text-sm font-medium leading-6 text-gray-900">First name</label>
                    <div class="mt-2">
                            <%= f.text_field :first_name, placeholder: 'ryan', class: 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-primary sm:text-sm sm:leading-6' %>                    </div>
                    </div>

                    <div class="sm:col-span-2">
                    <label for="last_name" class="block text-sm font-medium leading-6 text-gray-900">Last name</label>
                    <div class="mt-2">
                        <%= f.text_field :last_name, placeholder: 'kulp', class: 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-primary sm:text-sm sm:leading-6' %>                    </div>
                    </div>
                    </div>

                    <div class="sm:col-span-2 mt-4">
                    <label for="email" class="block text-sm font-medium leading-6 text-gray-900">Email address</label>
                    <div class="mt-2">
                        <%= f.text_field :email, type: 'email', placeholder: 's@s.com', class: 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-primary sm:text-sm sm:leading-6' %>                    </div>
                    </div>
                    </div>

                    <div class="sm:col-span-2">
                    <label for="website" class="block text-sm font-medium leading-6 text-gray-900">Website</label>
                    <div class="mt-2">
                        <%= f.text_field :website,type: 'url', placeholder: 'http://s.com', class: 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-primary sm:text-sm sm:leading-6' %>
                    </div>
                    </div>

                    <fieldset class="mt-4">

                    <legend class="text-sm font-semibold leading-6 text-gray-900">What's your role?</legend>
                    <p class="mt-1 text-sm leading-6 text-gray-600">Describe your role at this company</p>
                    <div class="mt-6 space-y-3">
                        <div class="flex items-center gap-x-3">
                        <%= f.text_field :job_role,type: 'radio',value: 'C-suite', class: 'h-4 w-4 border-gray-300 text-primary focus:ring-primary' %>
                        <label for="job_role" class="block text-sm font-medium leading-6 text-gray-900">C-suite</label>
                        </div>
                        <div class="flex items-center gap-x-3">
                        <%= f.text_field :job_role,type: 'radio',value: 'Founder', class: 'h-4 w-4 border-gray-300 text-primary focus:ring-primary' %>
                        <label for="job_role" class="block text-sm font-medium leading-6 text-gray-900">Founder</label>
                        </div>
                        <div class="flex items-center gap-x-3">
                        <%= f.text_field :job_role,type: 'radio',value: 'Operator', class: 'h-4 w-4 border-gray-300 text-primary focus:ring-primary' %>
                        <label for="job_role" class="block text-sm font-medium leading-6 text-gray-900">Operator</label>
                        </div>
                    </div>
                    </fieldset>

                    <div class="col-span-full mt-4">
                            <label for="text" class="block text-sm font-medium leading-6 text-gray-900">About</label>
                            <div class="mt-2">
                                <%= f.text_area :text, rows: '6', class: 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6' %>
                            </div>
                            <p class="mt-3 text-sm leading-6 text-gray-600">Write a few sentences about yourself.</p>
                    </div>

                </div>

            <div class="mt-6 flex items-center justify-center gap-x-6">
                <button type="submit" class="w-full rounded-md bg-primary px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-primary focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary">Save</button>
            </div>
    <% end %>

</div>
